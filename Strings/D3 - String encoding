string encode(string &message)

{

    int n= message.size();

    string str;

   int count=1;

    for(int i=0;i<n;i++){

        

        if(message[i]==message[i+1]){

            count+=1;

            continue;

        }

        str+=message[i];

        str+=to_string(count);

        count=1;

 

    }

 

    return str;

    

}
