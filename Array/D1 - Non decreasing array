#include <bits/stdc++.h> 

using namespace std;

bool isPossible(int *arr, int n)

{

    int flag=0,pre=INT_MIN,curr=arr[0];
    for(int i=0;i<n-1;i++)
    {
        if(arr[i+1]>=curr)
        {
            pre=curr;curr=arr[i+1];
        }
        else{
            flag++;
            if(arr[i+1]>=pre){
                curr=arr[i+1];
            }
        }
        if(flag>1)
            return false;
    }
    return true;
   
}